{# templates/client/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Клиенты - Ресторан{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="bi bi-people"></i> Клиенты
    </h1>
    <a href="{{ path('app_client_new') }}" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Добавить клиента
    </a>
</div>

<div class="card">
    <div class="card-body">
        {% if clients|length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Имя</th>
                            <th>Телефон</th>
                            <th>Дата регистрации</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for client in clients %}
                            <tr>
                                <td>{{ client.id }}</td>
                                <td>
                                    <strong>{{ client.name }}</strong>
                                </td>
                                <td>
                                    {% if client.phone %}
                                        <a href="tel:{{ client.phone }}" class="text-decoration-none">
                                            <i class="bi bi-telephone"></i> {{ client.phone }}
                                        </a>
                                    {% else %}
                                        <span class="text-muted">Не указан</span>
                                    {% endif %}
                                </td>
                                <td>{{ client.createdAt|date('d.m.Y H:i') }}</td>
                                <td class="table-actions">
                                    <a href="{{ path('app_client_show', {'id': client.id}) }}" 
                                       class="btn btn-sm btn-outline-primary" 
                                       title="Просмотр">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_client_edit', {'id': client.id}) }}" 
                                       class="btn btn-sm btn-outline-warning" 
                                       title="Редактировать">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="post" 
                                          action="{{ path('app_client_delete', {'id': client.id}) }}" 
                                          class="d-inline" 
                                          onsubmit="return confirm('Вы уверены, что хотите удалить этого клиента?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Удалить">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="text-center py-5">
                <i class="bi bi-people display-1 text-muted"></i>
                <h3 class="text-muted mt-3">Клиентов пока нет</h3>
                <p class="text-muted">Добавьте первого клиента чтобы начать работу</p>
                <a href="{{ path('app_client_new') }}" class="btn btn-primary mt-3">
                    <i class="bi bi-plus-circle"></i> Добавить клиента
                </a>
            </div>
        {% endif %}
    </div>
</div>

<div class="mt-3">
    <small class="text-muted">
        Всего клиентов: <strong>{{ clients|length }}</strong>
    </small>
</div>
{% endblock %}