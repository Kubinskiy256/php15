{# templates/client/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Редактировать клиента - Ресторан{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">
                    <i class="bi bi-pencil"></i> Редактировать клиента
                </h4>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.name, 'Имя клиента *', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.name, {'attr': {
                                    'class': 'form-control' ~ (form.name.vars.errors|length ? ' is-invalid' : ''),
                                    'placeholder': 'Введите имя клиента'
                                }}) }}
                                {% if form.name.vars.errors %}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.name) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.phone, 'Телефон', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.phone, {'attr': {
                                    'class': 'form-control' ~ (form.phone.vars.errors|length ? ' is-invalid' : ''),
                                    'placeholder': '+7 (999) 123-45-67'
                                }}) }}
                                {% if form.phone.vars.errors %}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.phone) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <small class="text-muted">
                            <i class="bi bi-info-circle"></i> Дата регистрации: {{ client.createdAt|date('d.m.Y H:i') }}
                        </small>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-circle"></i> Обновить данные
                        </button>
                        <a href="{{ path('app_client_index') }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Отмена
                        </a>
                        <a href="{{ path('app_client_show', {'id': client.id}) }}" class="btn btn-outline-primary">
                            <i class="bi bi-eye"></i> Просмотр
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}