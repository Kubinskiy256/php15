{# templates/client/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Добавить клиента - Ресторан{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">
                    <i class="bi bi-person-plus"></i> Добавить нового клиента
                </h4>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.name, 'Имя клиента *', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.name, {'attr': {
                                    'class': 'form-control' ~ (form.name.vars.errors|length ? ' is-invalid' : ''),
                                    'placeholder': 'Введите имя клиента'
                                }}) }}
                                {% if form.name.vars.errors %}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.name) }}
                                    </div>
                                {% endif %}
                                <div class="form-text">Обязательное поле</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.phone, 'Телефон', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.phone, {'attr': {
                                    'class': 'form-control' ~ (form.phone.vars.errors|length ? ' is-invalid' : ''),
                                    'placeholder': '+7 (999) 123-45-67'
                                }}) }}
                                {% if form.phone.vars.errors %}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.phone) }}
                                    </div>
                                {% endif %}
                                <div class="form-text">Необязательное поле</div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Сохранить клиента
                        </button>
                        <a href="{{ path('app_client_index') }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Назад к списку
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}