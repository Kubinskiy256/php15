<!DOCTYPE html>

<title>Список блюд</title>

{% block body %}
    <h1>Список блюд</h1>

    <table >
        <thead>
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Цена</th>
                <th>-</th>
            </tr>
        </thead>
        <tbody>
        {% for dish in dishes %}
            <tr>
                <td>{{ dish.id }}</td>
                <td>{{ dish.name }}</td>
                <td>{{ dish.price }}</td>
                <td>
                    <a href="{{ path('app_dish_show', {'id': dish.id}) }}">Подробнее</a>
                    <a href="{{ path('app_dish_edit', {'id': dish.id}) }}">Изменить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Блюд не найдено</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_order_index') }}">Назад к списку заказов</a>
    <a href="{{ path('app_dish_new') }}">Создать блюдо</a>
{% endblock %}