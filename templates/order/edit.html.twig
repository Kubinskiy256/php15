{# templates/order/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Редактировать заказ - Ресторан{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">
                    <i class="bi bi-pencil"></i> Редактировать заказ #{{ order.id }}
                </h4>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-4">
                                <h5 class="text-primary mb-3">
                                    <i class="bi bi-person"></i> Клиент
                                </h5>
                                {{ form_row(form.client, {
                                    'label': 'Клиент *',
                                    'attr': {
                                        'class': 'form-select' ~ (form.client.vars.errors|length ? ' is-invalid' : '')
                                    }
                                }) }}
                                {% if form.client.vars.errors %}
                                    <div class="invalid-feedback d-block">
                                        {{ form_errors(form.client) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                <h5 class="text-success mb-3">
                                    <i class="bi bi-egg"></i> Блюда
                                </h5>
                                {{ form_row(form.orderDishes, {
                                    'label': 'Блюда *',
                                    'attr': {
                                        'class': 'form-select' ~ (form.orderDishes.vars.errors|length ? ' is-invalid' : ''),
                                        'size': 6
                                    }
                                }) }}
                                {% if form.orderDishes.vars.errors %}
                                    <div class="invalid-feedback d-block">
                                        {{ form_errors(form.orderDishes) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h6 class="card-title">
                                <i class="bi bi-info-circle"></i> Информация о заказе
                            </h6>
                            <div class="row">
                                <div class="col-md-6">
                                    <strong>Текущая сумма:</strong> 
                                    <span class="text-success fw-bold">{{ order.totalPrice }} ₽</span>
                                </div>
                                <div class="col-md-6">
                                    <strong>Дата создания:</strong> 
                                    {{ order.createdAt|date('d.m.Y H:i') }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-circle"></i> Обновить заказ
                        </button>
                        <a href="{{ path('app_order_index') }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Отмена
                        </a>
                        <a href="{{ path('app_order_show', {'id': order.id}) }}" class="btn btn-outline-primary">
                            <i class="bi bi-eye"></i> Просмотр
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}