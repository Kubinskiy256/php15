{# templates/order/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Заказы - Ресторан{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="bi bi-receipt"></i> Заказы
    </h1>
    <a href="{{ path('app_order_new') }}" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Создать заказ
    </a>
</div>

<div class="card">
    <div class="card-body">
        {% if orders|length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Клиент</th>
                            <th>Телефон</th>
                            <th>Блюда</th>
                            <th>Сумма</th>
                            <th>Дата заказа</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for order in orders %}
                            <tr>
                                <td>
                                    <strong>#{{ order.id }}</strong>
                                </td>
                                <td>
                                    <a href="{{ path('app_client_show', {'id': order.client.id}) }}" class="text-decoration-none">
                                        {{ order.client.name }}
                                    </a>
                                </td>
                                <td>
                                    {% if order.client.phone %}
                                        <a href="tel:{{ order.client.phone }}" class="text-decoration-none">
                                            <i class="bi bi-telephone"></i> {{ order.client.phone }}
                                        </a>
                                    {% else %}
                                        <span class="text-muted">Не указан</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <small>
                                        {% for orderDish in order.orderDishes|slice(0, 2) %}
                                            {{ orderDish.dish.name }}{% if not loop.last %}, {% endif %}
                                        {% endfor %}
                                        {% if order.orderDishes|length > 2 %}
                                            <span class="text-muted">+{{ order.orderDishes|length - 2 }} еще</span>
                                        {% endif %}
                                    </small>
                                </td>
                                <td>
                                    <span class="badge bg-success fs-6">{{ order.totalPrice }} ₽</span>
                                </td>
                                <td>{{ order.createdAt|date('d.m.Y H:i') }}</td>
                                <td class="table-actions">
                                    <a href="{{ path('app_order_show', {'id': order.id}) }}" 
                                       class="btn btn-sm btn-outline-primary" 
                                       title="Просмотр">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_order_edit', {'id': order.id}) }}" 
                                       class="btn btn-sm btn-outline-warning" 
                                       title="Редактировать">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="post" 
                                          action="{{ path('app_order_delete', {'id': order.id}) }}" 
                                          class="d-inline" 
                                          onsubmit="return confirm('Вы уверены, что хотите удалить этот заказ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Удалить">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="text-center py-5">
                <i class="bi bi-cart-x display-1 text-muted"></i>
                <h3 class="text-muted mt-3">Заказов пока нет</h3>
                <p class="text-muted">Создайте первый заказ чтобы начать работу</p>
                <a href="{{ path('app_order_new') }}" class="btn btn-primary mt-3">
                    <i class="bi bi-plus-circle"></i> Создать заказ
                </a>
            </div>
        {% endif %}
    </div>
</div>

<div class="mt-3">
    <small class="text-muted">
        Всего заказов: <strong>{{ orders|length }}</strong> | 
        Общая выручка: <strong class="text-success">
            {{ orders|reduce((sum, order) => sum + order.totalPrice, 0) }} ₽
        </strong>
    </small>
</div>
{% endblock %}